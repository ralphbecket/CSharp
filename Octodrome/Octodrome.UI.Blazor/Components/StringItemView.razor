<input
    class="StringItemView"
    type="text"
    value="@Item.Value"
    @onchange="OnChange"
/>

@code {
    [Parameter]
    public ViewState ViewState { get; set; }
    [Parameter]
    public StringItem Item { get; set; }

    private void OnChange(ChangeEventArgs e) {
        var value = e.Value.ToString();
        if (value == Item.Value) return;
        ViewState.Doc = StringItem.Change(ViewState.Doc, Item, value);
        Item = (StringItem)ViewState.Doc[Item.ID];
    }
}
